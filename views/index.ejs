<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css" />
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/auth.css" />
    </head>
    <body>
        <nav class="light-blue">
            <div class="nav-wrapper">
                <a href="/" class="brand-logo center">Footballkik</a>
                <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li class="active"><a href="/">Log In</a></li>
                    <li><a href="/signup">Register</a></li>
                </ul>
                <ul class="side-nav" id="mobile">
                    <li class="active"><a href="/">Log In</a></li>
                    <li><a href="/signup">Register</a></li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <form action="/" method="post" class="col s12">
                    <h2 class="center-align">Log In</h2>
                    <% if (hasErrors) { %>
                        <div class="row" id="alert-box">
                            <div class="col s12">
                                <div class="card red lighten-4">
                                    <div class="row">
                                        <div class="col s12 m10">
                                            <div class="card-content">
                                                <% _.forEach(messages, function(error) { %>
                                                    <p><%= error %></p>
                                                <% }) %>
                                            </div>
                                        </div>
                                        <div class="col s12 m2">
                                            <i class="fa fa-times icon-style" id="alert-close" aria-hidden="true" aria-label="Close"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="email" id="email" name="email" class="validate" />
                            <label for="email">E-mail Address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="password" id="password" name="password" class="validate" />
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 offset-s3 center-align">
                            <button class="btn waves-effect waves-light" type="submit">Log In
                                <i class="fa fa-sign-in right"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 offset-s3 center-align">
                            <a href="/auth/facebook" class="btn waves-effect waves-light fb-icon">Continue With Facebook
                                <i class="fa fa-facebook left"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 offset-s3 center-align">
                            <a href="/auth/google" class="btn waves-effect waves-light google-icon">Continue With Google+
                                <i class="fa fa-google-plus left"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 offset-s3">
                            <p class="flow-text center-align">
                                <a href="/signup">Need an account? Sign up here.</a>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script src="/js/auth.js"></script>
    </body>
</html>
