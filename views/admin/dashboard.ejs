<!DOCTYPE html>
<html>
    <head>
        <title>Footballkik | Admin Dashboard</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css" />
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/dashboard.css" />
    </head>
    <body>
        <nav class="light-blue">
            <div class="nav-wrapper">
                <a href="/home" class="brand-logo center">Footballkik</a>
                <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li class="active"><a href="/dashboard">Admin Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
                <ul class="side-nav" id="mobile">
                    <li class="active"><a href="/dashboard">Admin Dashboard</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <form action="/dashboard" method="post" class="col s12">
                    <h2 class="center-align">Admin Dashboard</h2>
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="text" id="club" name="club" class="validate" />
                            <label for="club">Club Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="text" id="country" name="country" class="validate" />
                            <label for="country">Country</label>
                        </div>
                    </div>
                    <div class="row upload-container">
                        <div class="file-field input-field col s6 offset-s3">
                            <div class="btn">
                                <span>Image File</span>
                                <input type="file" class="upload-input" name="upload" />
                            </div>
                            <div class="file-path-wrapper">
                                <input type="text" class="file-path validate" name="imagename" />
                            </div>
                        </div>
                    </div>
                    <div class="row upload-button-container">
                        <div class="col s6 offset-s3 center-align">
                            <button class="btn waves-effect waves-light upload-button" type="button">Upload File
                                <i class="material-icons right">cloud_upload</i>
                            </button>
                        </div>
                    </div>
                    <div class="row submit-button-container">
                        <div class="col s6 offset-s3 center-align">
                            <button class="btn waves-effect waves-light" type="submit">Create Club
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script src="/js/dashboard.js"></script>
    </body>
</html>
