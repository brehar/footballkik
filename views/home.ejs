<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/style.css" />
    </head>
    <body>
        <%- include partials/navbar.ejs %>
        <div class="col-md-12">
            <form action="#" method="post">
                <div class="form-group ad-30" style="margin-top:8px;">
                    <div class="input-group search-style">
                        <input class="form-control new-search-bar"  name="country" id="search" placeholder="Enter Club Name" type="text" />
                        <span class="input-group-btn">
                            <button class="btn input-btn" type="" id="search-form">Search</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="filter-container">
                                <div class="card">
                                    <form action="#" method="post">
                                        <div class="content">
                                            <p class="filter">FILTER</p>
                                            <hr />
                                            <select class="form-control" name="country" id="country">
                                                <option value="">Filter by Country</option>
                                                <% _.forEach(countries, function(country) { %>
                                                    <option value="<%= country._id %>"><%= country._id %></option>
                                                <% }) %>
                                            </select>
                                            <div class="clearfix"></div>
                                            <button class="btn add-apply">Apply</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div>
                        <% _.forEach(data, function(val) { %>
                            <div class="category-list">
                                <div class="row">
                                    <% _.forEach(val, function(val2) { %>
                                        <form action="#" method="post" id="add-fav">
                                            <div class="item col-md-4">
                                                <a style="text-decoration: none;" href="/group/<%= val2.name %>">
                                                    <div class="thumbnail">
                                                        <img src="https://footballkik-bjh.s3.amazonaws.com/<%= val2.image %>" alt="<%= val2.image %>" />
                                                        <div class="caption">
                                                            <h4><%= val2.name %></h4>
                                                            <div class="row">
                                                                <div class="col-xs-12 col-md-6">
                                                                    <p><%= val2.country %></p>
                                                                </div>
                                                                <div class="col-xs-12 col-md-6">
                                                                    <button class="btn add-fav">
                                                                        Add to Favorites
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        </form>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="/js/home.js"></script>
    </body>
</html>
